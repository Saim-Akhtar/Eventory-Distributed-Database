<%- include('includes/head.ejs') %>    
</head>
<body>
    <%- include('includes/navigation.ejs') %>
    <div class="container my-5">
        <h2>List of All Sponsors</h2>

        
          <div class="dropdown float-right">
                  <button class="btn btn-secondary "
                          type="button" data-toggle="modal"
                          data-target="#modalAdd">
                    Add A Sponsor
                  </button>
                </div>
        

<!-- Modal -->
<div class="modal" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenteredLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenteredLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/sponsors/add" method="POST">
          <div class="form-group">
              <label for="name">Enter Sponsor Name</label>
              <input type="text" class="form-control" name="name" placeholder="">
            </div>
          
          <button type="submit" class="btn btn-primary mb-2" >Insert Sponsor</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

        <div class="clearfix"></div>
        
        <% if(sponsorsList.length >0) { %>
            <table class="table my-3">
                    <thead class="thead-dark">
                      <tr>
                        <th>#</th>
                        <th>Unique Key</th>
                        <th>Name</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                        
                    <% for (let s of sponsorsList) { %>
                        <tr>
                            <th scope="row"><%= s.id %></th>
                            <td><%= s.uniqueKey %></td>
                            <td><%= s.name %></td>
                            <td>
                              <form class="form-inline" action="/sponsors/delete/<%= s.id %>" method="POST">
                                <input type="text" class="sr-only" name="uniqueKey" value="<%= s.uniqueKey%>">
                                <button type="submit" class="btn bg-danger text-white">Delete</button>
                              </form>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                  </table>
                  <% } else { %>
                    <h1 class="text-warning text-center">No Sponsors IN Database</h1>
                    <% } %>

    </div>



</body>
</html>